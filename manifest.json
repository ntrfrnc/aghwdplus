{
  "manifest_version": 2,
  "name": "AGH Wirtualny dziekanat+",
  "version": "0.2",
  "description": "Zmienia wygląd wirtualnego dziekanatu AGH, umożliwia szybki podgląd ocen i powiadamia o nowych ocenach lub ich zmianach.",
  "icons": {
    "20": "images/20.png",
    "48": "images/48.png",
    "64": "images/64.png",
    "128": "images/128.png"
  },
  
  "applications": {
    "gecko": {
      "id": "aghweplus@rafaelpawlos.com",
      "strict_min_version": "45.0"
    }
  },
  
  "permissions": [
    "tabs",
    "https://dziekanat.agh.edu.pl/*",
    "storage",
    "background",
    "notifications",
    "alarms"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["https://dziekanat.agh.edu.pl/*"],
      "js": ["wd.js"]
    }
  ],
  
  "web_accessible_resources": [
    "wd.css",
    "images/agh_logo.png"
  ],
  
  "options_page": "options/options.html",
  
  "browser_action": {
    "default_icon": "images/20.png",
    "default_title": "AGH Wirtualny dziekanat+",
    "default_popup": "popup/popup.html"
  }
}
